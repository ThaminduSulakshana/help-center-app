<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

\
    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="306dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_main" />

    <TextView
        android:id="@+id/Txt_Welcome"
        android:layout_width="147dp"
        android:layout_height="35dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="123dp"
        android:text="Help Center"
        android:textColor="#1584F3"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagelogo" />

    <TextView
        android:id="@+id/temIDyako"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/inputback"
        android:backgroundTint="#6dd8ec"
        android:gravity="center"
        android:text="User ID"
        android:textColor="@color/inputtext"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_Welcome" />

    <TextView
        android:id="@+id/TemID"
        android:layout_width="231dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/inputback"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/inputtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_Welcome" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_mini"
        android:layout_width="385dp"
        android:layout_height="409dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/inputback"
        android:backgroundTint="#4800A4ED"
        android:radius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TemID">


        <TextView
            android:id="@+id/TempType"
            android:layout_width="334dp"
            android:layout_height="46dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/inputback"
            android:backgroundTint="@color/inputbackc"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/inputtext"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TempName"
            android:layout_width="334dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/inputback"
            android:backgroundTint="@color/inputbackc"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/inputtext"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TempType" />

        <TextView
            android:id="@+id/TempEmail"
            android:layout_width="334dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/inputback"
            android:backgroundTint="@color/inputbackc"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/inputtext"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TempName" />

        <TextView
            android:id="@+id/TempPhone"
            android:layout_width="334dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/inputback"
            android:backgroundTint="@color/inputbackc"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/inputtext"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TempEmail" />

        <TextView
            android:id="@+id/TempReason"
            android:layout_width="334dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/inputback"
            android:backgroundTint="@color/inputbackc"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/inputtext"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TempPhone" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btngoUpdate"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/btnsub"
        android:text="update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_mini" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="152dp"
        android:backgroundTint="@color/backbtn"
        android:text="delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_mini" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="336dp"
        android:backgroundTint="@color/backbtn"
        android:text="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_mini" />

    <TextView
        android:id="@+id/copy_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="83dp"
        android:text="© sula සහ පුත්‍රයෝ. All rights reserved."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_mini" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>